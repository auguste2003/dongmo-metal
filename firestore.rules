
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to projects, but restrict writes to authenticated users.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to site configuration, but restrict writes to authenticated users.
    match /site_config/{docId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
