
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This allows anyone to view images on your site.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict writes (uploads, updates, deletes) to only authenticated users.
    // This ensures only admins can manage the files.
    match /projects/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /hero/{allPaths=**} {
      allow write: if request.auth != null;
    }
     match /about/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
